<layout id="SessionLayout">
    <drawable id="white_background" />

    <!-- Draw the dividing lines for the timer -->
    <drawable id="horizontal_center_bar" />
    <drawable id="vertical_center_bar" />

    <!-- Total time -->
    <label
        x="70"
        y="45"
        text="@Strings.total_time"
        color="Graphics.COLOR_BLACK"
        font="Gfx.FONT_XTINY"
        justification="Graphics.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="total_time_text"
        x="65"
        y="75"
        color="Gfx.COLOR_BLACK"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
        font="Gfx.FONT_NUMBER_MILD"
    />

    <!-- Rest time -->
    <label
        x="175"
        y="45"
        text="@Strings.rest_time"
        color="Graphics.COLOR_BLACK"
        font="Gfx.FONT_XTINY"
        justification="Graphics.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="rest_time_text"
        x="175"
        y="75"
        color="Gfx.COLOR_BLACK"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
        font="Gfx.FONT_NUMBER_MILD"
    />
    
    <!-- Number of climbs attempted -->
    <label
        x="20"
        y="130"
        text="@Strings.climbs_attempted"
        color="Graphics.COLOR_BLACK"
        font="Gfx.FONT_XTINY"
    />
    <label
        id="climbs_attempted_text"
        x="70"
        y="160"
        color="Gfx.COLOR_BLACK"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
        font="Gfx.FONT_NUMBER_HOT"
    />
    
    <!-- Number of successful climbs -->
    <label
        x="140"
        y="130"
        text="@Strings.climbs_completed"
        color="Graphics.COLOR_BLACK"
        font="Gfx.FONT_XTINY"
    />
    <label
        id="climbs_successful_text"
        x="170"
        y="160"
        color="Gfx.COLOR_BLACK"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
        font="Gfx.FONT_NUMBER_HOT"
    />
</layout>
